<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.itwillbs.with_me.mapper.SmsMapper">
<!-- SMS 인증 정보를 저장하는 쿼리 -->
<insert id="saveSmsAuthInfo" parameterType="com.itwillbs.with_me.vo.SmsAuthInfo">
    INSERT INTO sms_auth_info
    VALUES (
    	#{creator_email}
    	, #{phone_number}
    	, #{auth_code}
    )
</insert>

<!-- 전화번호로 SMS 인증 정보를 조회하는 쿼리 -->
<select id="getSmsAuthInfoByPhoneNumber" resultType="com.itwillbs.with_me.vo.SmsAuthInfo">
    SELECT *
    FROM sms_auth_info
    WHERE phone_number = #{phone_number}
    ORDER BY created_at DESC
    LIMIT 1
</select>

<!-- (선택적) SMS 인증 정보를 삭제하는 쿼리 -->
<delete id="deleteSmsAuthInfo" parameterType="String">
    DELETE FROM sms_auth_info
    WHERE phone_number = #{phone_number}
</delete>
</mapper>